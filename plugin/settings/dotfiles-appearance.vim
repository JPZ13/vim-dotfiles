" dotfiles-appearance.vim
" =======================


" Use a dark background.
set background=dark

" Let Vim know our terminal supports all 256 colors.
set t_Co=256

" Use solarized.
" let g:solarized_termcolors=16
" let g:solarized_visibility = "high"
" let g:solarized_contrast = "high"
colorscheme slate

hi clear SpellBad
hi SpellBad cterm=underline

set spell
set ruler
